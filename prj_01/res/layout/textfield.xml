<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:id="@+id/text2" android:textColor="#ff676667" android:gravity="center_vertical|right"
            android:textSize="25dp" android:typeface="sans"/>
    <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/sign" android:gravity="center_horizontal|right"
            android:textSize="35dp" android:textIsSelectable="false" android:typeface="sans"/>
    <TextView
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:id="@+id/text1" android:gravity="center_vertical|right"
            android:textIsSelectable="false" android:textSize="25dp" android:typeface="sans"/>
</LinearLayout>