<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView android:text="@+id/label" android:layout_width="230dp"
            android:layout_height="wrap_content" android:id="@+id/label"
            android:textSize="20dp"></TextView>

        <CheckBox android:id="@+id/check" android:layout_width="40dp"
            android:layout_height="40dp" android:layout_marginLeft="4px"
            android:layout_alignParentRight="true"
            android:checked="false"></CheckBox>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/delete_button"

            android:id="@+id/del_work"
            android:layout_alignBottom="@+id/label"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="false" />
    </LinearLayout>
</RelativeLayout>